{
  "manifest_version": 3,
  "name": "AI Swarm",
  "version": "1.1",
  "description": "Open AI sites quickly. Copies question to clipboard for manual pasting.",
  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "permissions": ["tabs", "clipboardWrite"],
  "browser_specific_settings": {
    "gecko": {
      "id": "ai-swarm@yourdomain.com",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": []
      }
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Launch AI Swarm"
  },
  "background": {
    "scripts": ["background.js"]
  }
}