{
  "manifest_version": 3,
  "name": "AI Swarm",
  "version": "1.0",
  "description": "Quick AI launcher: Grok, Gemini, ChatGPT, Perplexity, Claude. Auto-URL params (?q=) + clipboard copy for questions.",
  "icons": {
    "16": "icon_16.png",
    "32": "icon_32.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "permissions": ["tabs", "clipboardWrite"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Launch AI Swarm"
  },
  "background": {
    "service_worker": "background.js"
  }
}